css:
  body {
    position: relative;
  }

  #side-nav .active > a {
    font-weight: bold;
  }

  #side-nav .nav .nav > li > a {
    padding-left: 40px !important;
  }

  #side-nav .nav .nav .nav > li > a {
    padding-left: 80px !important;
  }

  /* hide all (inactive) nested lists */
  #side-nav .nav .nav {
    display: none;
  }

  /* show active nested lists */
  #side-nav .nav > .active > .nav {
    display: block;
  }

  .carousel-container {
    position: relative;
  }

  .carousel-control {
    bottom: 0;
    left: 0;
    position: absolute;
    width: 100%;
    height: 28px;
    z-index: 2;
    background: rgba(0,0,0,.75);
    text-align: center;
    opacity: 0;
    -webkit-transition: opacity .25s ease;
    -moz-transition: opacity .25s ease;
  }

  .carousel-control .slide-link {
    cursor: pointer;
    padding: 5px;
  }

  @media screen and (max-width: 600px) {
    .carousel-control {
      visibility: hidden;
      display: none;
    }
  }
