== css :main, media: 'screen'

css:
  body {
    position: relative;
  }

  #side-nav .active > a {
    font-weight: bold;
  }

  #side-nav .nav .nav > li > a {
    padding-left: 40px !important;
  }

  #side-nav .nav .nav .nav > li > a {
    padding-left: 80px !important;
  }

  /* hide all (inactive) nested lists */
  #side-nav .nav .nav {
    display: none;
  }

  /* show active nested lists */
  #side-nav .nav > .active > .nav {
    display: block;
  }

  .carousel-container {
    position: relative;
  }

  .carousel-container .dropdown {
    position: absolute;
    top: 0;
    right: 0;
    z-index: 2;
  }

  .slide-link {
    cursor: pointer;
  }

  @media screen and (max-width: 600px) {
    .carousel-control {
      visibility: hidden;
      display: none;
    }
  }
